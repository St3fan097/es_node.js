{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist",
    "module": "es6",
    "target": "ES6"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.test.js"
  ],
  "overrides": [
    {
      "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist"
      },
      "include": [
        "./src/**/*.ts"
      ],
      "exclude": [
        "node_modules"
      ]
    }
  ]
}